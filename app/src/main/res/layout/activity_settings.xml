<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Configuración"
        app:titleTextColor="@android:color/white"/>

    <!-- Container for centering content vertically -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_change_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar IP de la Raspberry Pi" />

        <Button
            android:id="@+id/btn_delete_cameras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar todas las cámaras"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</LinearLayout>